{
  "name": "protoqol/quark",
  "description": "A stand-alone - light-weight - no-nonsense - flat-file, database called Quark.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Quinten Justus",
      "email": "quinten@protoqol.xyz"
    }
  ],
  "minimum-stability": "beta",
  "bin": [
    "bin/quark"
  ],
  "require": {
    "php": "^7.2.5",
    "ext-dom": "*",
    "ext-json": "*",
    "halaxa/json-machine": "^0.7.0",
    "nesbot/carbon": "^2.49",
    "symfony/console": "^5.3",
    "symfony/filesystem": "^5.3",
    "vlucas/phpdotenv": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Protoqol\\Quark\\": "src/"
    },
    "files": [
      "src/Helpers/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Protoqol\\Quark\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "phpunit"
    ],
    "quark": [
      "./bin/Quark.php"
    ],
    "post-install-cmd": [
      "composer dump-autoload"
    ],
    "post-update-cmd": [
      "composer dump-autoload"
    ]
  },
  "scripts-descriptions": {
    "test": "Runs the default PHPUnit test suite configured in phpunit.xml",
    "quark": "Run Quark."
  }
}
